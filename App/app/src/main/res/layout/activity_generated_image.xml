<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#317256"
    tools:context=".GeneratedClothingActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generated Image"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Generated Clothing Image in Square Format -->
    <ImageView
        android:id="@+id/generateClothingImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        android:layout_margin="16dp" />

    <!-- Button Container with Three Square Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Save"
            android:background="#03A9F4"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:textSize="18sp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginEnd="4dp" />

        <!-- Post Button -->
        <Button
            android:id="@+id/postButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Post"
            android:background="#03A9F4"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:textSize="18sp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- Redo Design Button -->
        <Button
            android:id="@+id/redoButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Redo"
            android:background="#03A9F4"
            android:textColor="#FFFFFF"
            android:fontFamily="serif"
            android:textSize="18sp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
