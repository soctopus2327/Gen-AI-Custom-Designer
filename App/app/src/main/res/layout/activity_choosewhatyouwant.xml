<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f7da"
    tools:context=".SelectCategoryActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Category"
        android:textSize="24sp"
        android:textColor="#234d20"
        android:fontFamily="serif"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Category Buttons -->
    <GridLayout
        android:id="@+id/categoryGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="3"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp">

        <!-- Tops Button -->
        <Button
            android:id="@+id/topsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Tops"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#36802d"
            android:fontFamily="serif" />

        <!-- T-Shirts Button -->
        <Button
            android:id="@+id/tshirtsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="T-Shirts"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#36802d"
            android:fontFamily="serif" />

        <!-- Blouses Button -->
        <Button
            android:id="@+id/blousesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Blouses"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#36802d"
            android:fontFamily="serif" />

        <!-- Pants Button -->
        <Button
            android:id="@+id/pantsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Pants"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#36802d"
            android:fontFamily="serif" />

        <!-- Skirts Button -->
        <Button
            android:id="@+id/skirtsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Skirts"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#36802d"
            android:fontFamily="serif" />

        <!-- Dresses Button -->
        <Button
            android:id="@+id/dressesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Dresses"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="#36802d"
            android:fontFamily="serif" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
